import { useState } from 'react';
import maquina from './fotos/maquinadetejer.jpg';
import { calcularDimensiones } from './util';
import './App.css';

function App() {
  const [pasadasMuestra, setPasadasMuestra] = useState('');
  const [cmMuestra, setCmMuestra] = useState('');
  const [cmMolde, setCmMolde] = useState('');
  const [resultado, setResultado] = useState('');


  const handleClick = () => {
    const resultado = calcularDimensiones(
      parseInt(pasadasMuestra),
      parseFloat(cmMuestra),
      parseFloat(cmMolde)
    );
    alert(`La dimensión calculada es: ${resultado}`); // Puedes reemplazar esto con lo que necesites hacer con el resultado
  };

  return (
    <>
      <div>
        <img src={maquina} className="img-maquina" alt="Maquina de tejer"/>
      </div>


      <h1>Dimensión tejida</h1>
      <section>
        <div className="pasadasMuestra">
          <label>Ingrese la cantidad de pasadas de la muestra</label>
          <input
            type='number'
            value={pasadasMuestra}
            onChange={(e) => setPasadasMuestra(e.target.value)}
          />
        </div>
        <div className='cmMuestra'>
          <label>Ingrese los cm de la muestra</label>
          <input
            type='number'
            value={cmMuestra}
            onChange={(e) => setCmMuestra(e.target.value)}
          />
        </div>
        <div className='cmMolde'>
          <label>Ingrese los cm del molde</label>
          <input
            type='number'
            value={cmMolde}
            onChange={(e) => setCmMolde(e.target.value)}
          />
        </div>
        <button onClick={handleClick}>
          <p>Calcular</p>
        </button>
      </section>
    </>
  );
}


